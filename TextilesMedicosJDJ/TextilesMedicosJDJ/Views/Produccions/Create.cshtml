@model TextilesMedicosJDJ.Models.Produccion

@{
    ViewData["Title"] = "Crear orden de producción";
    List<SelectListItem> productos = (List<SelectListItem>)ViewBag.productos;
    List<SelectListItem> materia = (List<SelectListItem>)ViewBag.MateriaPrima;
    var datos = ViewBag.MateriaCompleta;
    //value = "@Html.DropDownList("MPEstatica", productos, "-- - selecciona una opción", new { @class = "formcontrol" });"
}

<h1>Crear Orden</h1>

<h4>Producción</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoProducto" class="control-label"></label>
                <input asp-for="TipoProducto" class="form-control" />
                
                <span asp-validation-for="TipoProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadProduccion" class="control-label"></label>
                <input asp-for="CantidadProduccion" class="form-control"  />
                <span asp-validation-for="CantidadProduccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioAproximado" class="control-label"></label>
                <input asp-for="PrecioAproximado" class="form-control" value="3.5" disabled/>
                <span asp-validation-for="PrecioAproximado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaProducción" class="control-label"></label>
                <input asp-for="FechaProducción" class="form-control" type="datetime" value="@DateTime.Now" disabled />
                <span asp-validation-for="FechaProducción" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Orden" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a ordenes</a>
</div>

